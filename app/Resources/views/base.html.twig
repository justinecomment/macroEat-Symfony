<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
       
        {% block stylesheets %}
            {% stylesheets '@MacroBundle/Resources/public/css/*.css'  %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
            {% endstylesheets %}
        {% endblock %}

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    </head>

    <body>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('accueil_home') }}">Macro Eat</a>
                </div>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('macro_home') }}">
                            <i class="fa fa-apple" aria-hidden="true"></i>
                            Nutriments
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="fa fa-calculator" aria-hidden="true" style="display:block; font-size: 30px; padding-left: 27%;"></i>
                            Calculatrice
                        </a>
                        <ul class="menu">
                            <li>
                                <a href="{{ path('macro_calculatrice') }}">Calcul Calories</a>
                            </li>
                            <hr>
                            <li>
                                <a href="{{ path('macro_calculatrice_imc') }}">Calcul IMC</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        {% block body %}{% endblock %}
       
        {% block javascripts %}{% endblock %}
    </body>

</html>
